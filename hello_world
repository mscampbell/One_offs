#!/usr/bin/perl -w 
use strict;
use lib ('/home/mcampbell/lib');
use PostData;

#-----------------------------------------------------------------------------
#----------------------------------- MAIN ------------------------------------
#-----------------------------------------------------------------------------
print "hello world!\n";

my $n = 3;
my $x = 2;
my $q = 5;

my $z = change_it(); #($n, $x);

print $z."\n";
print $n."\n";
print $x."\n";
#-----------------------------------------------------------------------------
#---------------------------------- SUBS -------------------------------------
#-----------------------------------------------------------------------------
sub change_it {

	my $n = $n + $q;
	my $x = $x + 1;

	return $n/$x;

}
